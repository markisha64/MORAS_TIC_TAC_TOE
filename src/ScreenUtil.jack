class ScreenUtil {
	function void drawVertical(int x, int y0, int y1) {
		var int y;
		let y = y0;
		
		while ((y < y1)) {
			do Screen.drawPixel(x, y);

			let y = y + 1;
		}

		return;
	}

	function void drawHorizontal(int y, int x0, int x1) {
		var int x;
		let x = x0;
		
		while ((x < x1)) {
			do Screen.drawPixel(x, y);

			let x = x + 1;
		}

		return;
	}
}
